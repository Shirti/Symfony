{% extends 'base.html.twig' %}

{% block body %}
    <h1>Review list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>userRatedId</th>
            <th>reviewAuthorId</th>
            <th>text</th>
            <th>publicationDate</th>
            <th>note</th>
        </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td><a href="{{ path('review_show', { 'id': review.id }) }}">{{ review.id }}</a></td>
                <td>{{ review.userRatedId }}</td>
                <td>{{ review.reviewAuthorId }}</td>
                <td>{{ review.text }}</td>
                <td>{% if review.publicationDate %}{{ review.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ review.note }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('review_new') }}">Create a new review</a>
        </li>
    </ul>
{% endblock %}
